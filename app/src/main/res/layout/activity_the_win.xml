<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper_play_game"
    android:orientation="vertical"
    tools:context=".TheWinActivity">
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:textStyle="bold"
            android:text="THE WIN!"
            android:textColor="#FA0202"
            android:textSize="30sp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:minWidth="100dp"
            android:gravity="center"
            android:background="@drawable/bg_coin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp">
        <ImageView
            android:id="@+id/imageAnswer"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/catinh"/>
    </RelativeLayout>

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:id="@+id/txvShowAnswer"
            android:text="ANSWER"
            android:textColor="#000"
            android:textSize="20sp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:minWidth="100dp"
            android:gravity="center"
            android:background="@drawable/bg_coin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
        </TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:background="@drawable/grey_button"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="220dp"
        android:orientation="horizontal"
        android:layout_height="60dp">
        <Button
            android:id="@+id/btn_share"
            android:background="@drawable/ic_share"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <Button
            android:id="@+id/btn_home"
            android:background="@drawable/ic_home"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <Button
            android:id="@+id/btn_continuous"
            android:background="@drawable/ic_continuous"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
    </LinearLayout>

</LinearLayout>